{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend challenge",
  "main": "index.js",
  "author": "alexsotocx",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf build && tsc --project tsconfig.build.json",
    "dev:start:importer": "docker compose up -d postgres && ts-node src/bin/importer.ts",
    "dev:start:api": "docker compose up -d postgres && nodemon src/bin/api.ts",
    "test:unit": "mocha 'src/**/*.test.ts'",
    "db:reset": "docker compose down && docker compose up --force-recreate -d -V postgres && sleep 1 && ts-node src/bin/reset-db.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.39",
    "@types/pg": "^8.10.2",
    "@types/sinon-chai": "^3.2.9",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "csv-parse": "^5.4.0",
    "express": "^4.18.2",
    "pg": "^8.11.1",
    "knex": "^2.5.1"
  }
}
