{
  "name": "backend",
  "version": "1.0.0",
  "description": "Backend challenge",
  "main": "index.js",
  "author": "alexsotocx",
  "license": "MIT",
  "private": false,
  "scripts": {
    "build": "rm -rf build && tsc --project tsconfig.build.json",
    "lint": "prettier 'src/**/*.ts' --config .prettierrc.js --write && eslint './**/*.ts' --fix",
    "dev:start:importer": "docker compose up -d postgres && LOG_LEVEL=debug  ts-node src/bin/importer.ts",
    "dev:start:api": "docker compose up -d postgres && LOG_LEVEL=debug nodemon src/bin/api.ts",
    "test:unit": "LOG_LEVEL=debug mocha 'src/**/*.test.ts'",
    "test:e2e": "TZ=UTC LOG_LEVEL=debug mocha 'test/e2e/**/*.test.ts'",
    "db:reset": "docker compose down && docker compose up --force-recreate -d -V postgres && LOG_LEVEL=debug sleep 1 && ts-node src/bin/reset-db.ts"
  },
  "devDependencies": {
    "@types/chai": "^4.3.5",
    "@types/chai-as-promised": "^7.1.5",
    "@types/express": "^4.17.17",
    "@types/mocha": "^9.1.1",
    "@types/node": "^16.18.39",
    "@types/pg": "^8.10.2",
    "@types/sinon-chai": "^3.2.9",
    "@types/supertest": "^2.0.12",
    "@typescript-eslint/eslint-plugin": "^6.2.0",
    "@typescript-eslint/parser": "^6.2.0",
    "chai": "^4.3.7",
    "chai-as-promised": "^7.1.1",
    "eslint": "^8.46.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-plugin-import": "^2.28.0",
    "mocha": "^10.2.0",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.0",
    "sinon": "^15.2.0",
    "sinon-chai": "^3.7.0",
    "supertest": "^6.3.3",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.5"
  },
  "dependencies": {
    "csv-parse": "^5.4.0",
    "express": "^4.18.2",
    "knex": "^2.5.1",
    "pg": "^8.11.1",
    "winston": "^3.10.0"
  }
}
