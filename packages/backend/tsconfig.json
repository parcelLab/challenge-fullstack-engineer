{
  "ts-node": {
    "files": true
  },
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitAny": true,
    "target": "es2020",
    "outDir": "build/src",
    "sourceMap": true,
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
  "include": [
    "src/**/*.ts",
  ],
  "exclude": [
    "test",
    "node_modules",
    "**/*.test.ts"
  ]
}
